@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />

<div class="body row">
    <div class="col-md-4">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/img/Logo.png" alt="Logo" width="200" height="150" class="d-inline-block align-text-top">
        </a>
        <section>
            <form class="form" id="account" method="post">
                <h2>Crear una cuenta</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="username mb-3 row justify-content-center">
                    <label asp-for="Input.Nombre" class="form-label"></label>
                    <input asp-for="Input.Nombre" class="box col-sm-2 col-form-label" autocomplete="Nombre" aria-required="true" />
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>
                <div class="username mb-3 row justify-content-center">
                    <label asp-for="Input.Apellidos" class="form-label"></label>
                    <input asp-for="Input.Apellidos" class="box col-sm-2 col-form-label" autocomplete="Apellidos" aria-required="true" />
                    <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
                </div>
                <div class="username mb-3 row justify-content-center">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="box col-sm-2 col-form-label" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="username mb-3 row justify-content-center">
                    <label asp-for="Input.Contraseña" class="form-label"></label>
                    <input asp-for="Input.Contraseña" class="box col-sm-2 col-form-label" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Contraseña" class="text-danger"></span>
                </div>
                <div class="username mb-3 row justify-content-center">
                    <label asp-for="Input.ConfirmarContraseña" class="form-label"></label>
                    <input asp-for="Input.ConfirmarContraseña" class="box col-sm-2 col-form-label" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmarContraseña" class="text-danger"></span>
                </div>

                <div class="link">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">¿Ya estás registrado? Inicia sesión</a>
                </div>
                <button id="login-submit" type="submit" class="button">Registrarme</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}